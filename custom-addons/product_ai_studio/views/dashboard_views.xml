<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard View -->
        <record id="view_product_ai_studio_dashboard" model="ir.ui.view">
            <field name="name">product.ai.studio.dashboard</field>
            <field name="model">product.enrichment</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="false" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="enrichment_profile_id"/>
                    <field name="state"/>
                    <field name="marketplace_id"/>
                    <field name="approved"/>
                    <field name="vectorized"/>
                    <field name="create_date"/>
                    <field name="processed_date"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image: url(#{kanban_image('product.template', 'image_128', record.product_id.raw_value)}); background-position: center;">
                                    <img class="o_kanban_image_inner_pic" t-if="record.approved.raw_value" 
                                         src="/product_ai_studio/static/src/img/approved_badge.png" alt="Aprovado"/>
                                </div>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="enrichment_profile_id"/>
                                                <t t-if="record.marketplace_id.raw_value"> - <field name="marketplace_id"/></t>
                                            </small>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown" groups="product_ai_studio.group_product_ai_studio_manager">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <t t-if="widget.editable">
                                                    <a role="menuitem" type="edit" class="dropdown-item">Editar</a>
                                                </t>
                                                <t t-if="widget.deletable">
                                                    <a role="menuitem" type="delete" class="dropdown-item">Excluir</a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <span class="text-muted">Status:</span>
                                                <span t-attf-class="badge badge-pill #{record.state.raw_value == 'done' ? 'badge-success' : record.state.raw_value == 'error' ? 'badge-danger' : record.state.raw_value == 'processing' ? 'badge-warning' : 'badge-info'}">
                                                    <t t-if="record.state.raw_value == 'draft'">Rascunho</t>
                                                    <t t-elif="record.state.raw_value == 'pending'">Pendente</t>
                                                    <t t-elif="record.state.raw_value == 'processing'">Processando</t>
                                                    <t t-elif="record.state.raw_value == 'done'">Concluído</t>
                                                    <t t-elif="record.state.raw_value == 'error'">Erro</t>
                                                    <t t-elif="record.state.raw_value == 'canceled'">Cancelado</t>
                                                </span>
                                            </div>
                                            <div class="col-6">
                                                <span class="text-muted">Vetorizado:</span>
                                                <span t-if="record.vectorized.raw_value" class="badge badge-pill badge-success">Sim</span>
                                                <span t-else="" class="badge badge-pill badge-light">Não</span>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">Criado em: <field name="create_date" widget="date"/></small>
                                            <t t-if="record.processed_date.raw_value">
                                                <br/><small class="text-muted">Processado em: <field name="processed_date" widget="date"/></small>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <button t-if="record.state.raw_value == 'draft' or record.state.raw_value == 'error'" 
                                                    class="btn btn-primary btn-sm" 
                                                    name="action_process" type="object">
                                                Processar
                                            </button>
                                            <button t-if="record.state.raw_value == 'done' and !record.approved.raw_value" 
                                                    class="btn btn-success btn-sm" 
                                                    name="action_approve" type="object">
                                                Aprovar
                                            </button>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <button class="btn btn-secondary btn-sm" 
                                                    name="action_view_product" type="object">
                                                Ver Produto
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Dashboard Action -->
        <record id="action_product_ai_studio_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">product.enrichment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_product_ai_studio_dashboard"/>
            <field name="context">{'search_default_my_enrichments': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crie seu primeiro enriquecimento de produto!
                </p>
                <p>
                    O Estúdio de Produtos com IA permite enriquecer descrições de produtos,
                    otimizar imagens e personalizar conteúdo para diferentes marketplaces.
                </p>
            </field>
        </record>
        
        <!-- Os menus foram movidos para menu_views.xml -->
    </data>
</odoo>
