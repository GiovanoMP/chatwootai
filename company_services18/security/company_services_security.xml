<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categoria de Segurança -->
        <record id="module_category_company_services" model="ir.module.category">
            <field name="name">Empresa e Serviços</field>
            <field name="description">Gerencia permissões para o módulo Empresa e Serviços</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo de Usuário -->
        <record id="group_company_services_user" model="res.groups">
            <field name="name">Usuário</field>
            <field name="category_id" ref="module_category_company_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo de Gerente -->
        <record id="group_company_services_manager" model="res.groups">
            <field name="name">Gerente</field>
            <field name="category_id" ref="module_category_company_services"/>
            <field name="implied_ids" eval="[(4, ref('group_company_services_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Regra de Registro para Empresa e Serviços -->
        <record id="company_service_rule" model="ir.rule">
            <field name="name">Empresa e Serviços: acesso global</field>
            <field name="model_id" ref="model_company_service"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_company_services_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="company_service_manager_rule" model="ir.rule">
            <field name="name">Empresa e Serviços: acesso gerente</field>
            <field name="model_id" ref="model_company_service"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_company_services_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regra de Registro para Números de Telefone Especiais -->
        <record id="special_phone_rule" model="ir.rule">
            <field name="name">Números de Telefone Especiais: acesso global</field>
            <field name="model_id" ref="model_company_services_special_phone"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_company_services_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="special_phone_manager_rule" model="ir.rule">
            <field name="name">Números de Telefone Especiais: acesso gerente</field>
            <field name="model_id" ref="model_company_services_special_phone"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_company_services_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
