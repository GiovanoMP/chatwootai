<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ações para os modelos -->
    <record id="action_ai_business_rules" model="ir.actions.act_window">
        <field name="name">Regras de Negócio</field>
        <field name="res_model">business.rules2</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira regra de negócio
            </p>
            <p>
                As regras de negócio permitem configurar como o sistema de IA responderá às consultas dos clientes.
                Você pode criar regras permanentes, temporárias, de agendamento e adicionar documentos de suporte.
            </p>
        </field>
    </record>

    <!-- Ação para configurações -->
    <record id="action_ai_business_rules_configuration" model="ir.actions.act_window">
        <field name="name">Configurações</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'ai_business_rules'}</field>
    </record>

    <!-- Menu Principal -->
    <menuitem id="menu_ai_business_rules_root" name="Regras de Negócio IA" sequence="10"/>
    
    <!-- Submenu para Regras de Negócio -->
    <menuitem id="menu_ai_business_rules" parent="menu_ai_business_rules_root" name="Regras de Negócio" action="action_ai_business_rules" sequence="10"/>
    
    <!-- Submenu para Configurações -->
    <menuitem id="menu_ai_business_rules_config" name="Configurações" parent="menu_ai_business_rules_root" action="action_ai_business_rules_configuration" sequence="100"/>
</odoo>
