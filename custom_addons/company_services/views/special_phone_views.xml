<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_company_services_special_phone_form" model="ir.ui.view">
        <field name="name">company.services.special.phone.form</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <form string="Número de Telefone Especial">
                <sheet>
                    <!-- Cabeçalho com informações principais -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome da pessoa ou departamento" class="mb-0"/>
                        </h1>
                        <h2 class="text-muted">
                            <field name="phone_number" placeholder="+5511999999999" widget="phone"/>
                        </h2>
                    </div>
                    
                    <!-- Alerta informativo -->
                    <div class="alert alert-primary mb-4" role="alert" style="border-left: 4px solid #2196F3; background-color: #f8f9fa;">
                        <div class="d-flex">
                            <i class="fa fa-info-circle fa-2x me-3 text-primary"></i>
                            <div>
                                <h4 class="alert-heading">Número de Telefone Especial</h4>
                                <p class="mb-0">Os números de telefone especiais têm permissões adicionais para acessar funcionalidades avançadas do sistema de IA.</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Configurações principais -->
                    <div class="o_settings_container mt-4 mb-4 p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-cog fa-2x me-2" style="color: #00C853;"></i>
                            <div>
                                <h3 class="m-0">Configurações</h3>
                                <p class="text-muted mb-0">Configure as permissões deste número especial</p>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card shadow-sm mb-3">
                                    <div class="card-body p-3">
                                        <div class="form-check form-switch">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fa fa-headset text-primary me-2"></i>
                                                <label for="allow_erp_support" class="form-check-label fw-bold">Permitir Suporte ao ERP</label>
                                                <field name="allow_erp_support" widget="boolean_toggle" class="ms-2" help="Se ativado, este número terá acesso a funcionalidades avançadas de suporte ao ERP."/>
                                            </div>
                                            <p class="text-muted small ms-4">Ative esta opção para permitir que este número tenha acesso a funcionalidades avançadas de suporte ao ERP</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <notebook>
                        <page string="Observações" name="notes">
                            <div class="p-3" style="border-left: 4px solid #00C853; background-color: white; border-radius: 4px;">
                                <label for="notes" string="Observações Adicionais" class="fw-bold"/>
                                <field name="notes" placeholder="Observações adicionais sobre este número especial..." class="mt-2"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_company_services_special_phone_tree" model="ir.ui.view">
        <field name="name">company.services.special.phone.tree</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <tree decoration-info="allow_erp_support == True" string="Números de Telefone Especiais">
                <field name="name" string="Nome/Departamento"/>
                <field name="phone_number" widget="phone" string="Número de Telefone"/>
                <field name="allow_erp_support" widget="boolean_toggle" string="Suporte ao ERP"/>
                <field name="notes" optional="hide" string="Observações"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_company_services_special_phone_search" model="ir.ui.view">
        <field name="name">company.services.special.phone.search</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nome/Departamento"/>
                <field name="phone_number" string="Número de Telefone"/>
                <field name="notes" string="Observações"/>
                
                <filter string="Com Suporte ao ERP" name="erp_support" domain="[('allow_erp_support', '=', True)]" help="Mostra apenas números com acesso a suporte ao ERP"/>
                <filter string="Sem Suporte ao ERP" name="no_erp_support" domain="[('allow_erp_support', '=', False)]" help="Mostra apenas números sem acesso a suporte ao ERP"/>
                
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Permissões de Suporte ao ERP" name="group_erp_support" context="{'group_by': 'allow_erp_support'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_services_special_phone" model="ir.actions.act_window">
        <field name="name">Números de Telefone Especiais</field>
        <field name="res_model">company.services.special.phone</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <div class="o_view_nocontent_smiling_face" style="max-width: 500px; margin: 0 auto; text-align: center; padding: 20px;">
                <i class="fa fa-phone fa-4x mb-3" style="color: #00C853;"></i>
                <h2 class="mt-3 mb-2">Configure Números de Telefone Especiais</h2>
                <p class="text-muted mb-4">
                    Os números de telefone especiais têm permissões adicionais para acessar funcionalidades avançadas do sistema de IA.
                </p>
                <div class="alert alert-info" style="display: inline-block; text-align: left;">
                    <i class="fa fa-info-circle me-2"></i>
                    <strong>Dica:</strong> Configure números para pessoas ou departamentos que precisam de acesso a funcionalidades avançadas.
                </div>
            </div>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_company_services_special_phone"
              name="Números Especiais"
              parent="menu_company_services_configuration"
              action="action_company_services_special_phone"
              sequence="30"
              web_icon="company_services,static/description/phone_icon.png"/>
</odoo>
