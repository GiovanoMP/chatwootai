<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ações para credenciais -->
    <record id="action_ai_system_credentials" model="ir.actions.act_window">
        <field name="name">Credenciais do Sistema de IA</field>
        <field name="res_model">ai.system.credentials</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira credencial para integração com IA
            </p>
            <p>
                As credenciais são usadas para conectar o sistema de IA com o Odoo.
                Apenas administradores têm acesso a este módulo.
            </p>
        </field>
    </record>
    
    <!-- Ações para logs de acesso -->
    <record id="action_ai_credentials_access_log" model="ir.actions.act_window">
        <field name="name">Logs de Acesso às Credenciais</field>
        <field name="res_model">ai.credentials.access.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                Nenhum log de acesso encontrado
            </p>
            <p>
                Os logs de acesso registram todas as operações realizadas com as credenciais.
            </p>
        </field>
    </record>
    
    <!-- Menu principal -->
    <menuitem id="menu_ai_credentials_root" 
              name="Credenciais de IA" 
              sequence="100" 
              groups="group_ai_credentials_manager"
              web_icon="ai_credentials_manager,static/description/icon.png"/>
    
    <!-- Submenu para credenciais -->
    <menuitem id="menu_ai_system_credentials" 
              name="Credenciais" 
              parent="menu_ai_credentials_root" 
              action="action_ai_system_credentials" 
              sequence="10"/>
    
    <!-- Submenu para logs de acesso -->
    <menuitem id="menu_ai_credentials_access_log" 
              name="Logs de Acesso" 
              parent="menu_ai_credentials_root" 
              action="action_ai_credentials_access_log" 
              sequence="20"/>
</odoo>
