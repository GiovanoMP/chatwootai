<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_ai_credentials" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ai.credentials</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Microserviço de Configuração" string="Microserviço de Configuração" data-key="ai_credentials_manager">
                    <h2>Microserviço de Configuração</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Visualizador de Configurações</span>
                                <div class="text-muted">
                                    URL para o visualizador de configurações externo
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="config_viewer_url" class="o_field_char oe_inline" placeholder="http://localhost:8080"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="config_service_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="config_service_enabled"/>
                                <div class="text-muted">
                                    Ativar integração com o microserviço de configuração
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('config_service_enabled', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="config_service_url" string="URL do Microserviço"/>
                                <field name="config_service_url" placeholder="http://localhost:8002"/>
                                <div class="text-muted">
                                    URL do microserviço de configuração
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('config_service_enabled', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="config_service_api_key" string="Chave de API"/>
                                <field name="config_service_api_key" password="True"/>
                                <div class="text-muted">
                                    Chave de API para autenticação no microserviço
                                </div>

                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('config_service_enabled', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <button name="action_test_config_service_connection" type="object" string="Testar Conexão" class="btn-primary"/>
                                <div class="text-muted mt8">
                                    Testar a conexão com o microserviço de configuração
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
