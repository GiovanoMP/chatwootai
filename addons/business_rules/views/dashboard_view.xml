<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Modelo para o Dashboard de Regras Ativas -->
    <record id="view_business_rules_dashboard_form" model="ir.ui.view">
        <field name="name">business.rules.dashboard.form</field>
        <field name="model">business.rules.dashboard</field>
        <field name="arch" type="xml">
            <form string="Regras Ativas">
                <sheet>
                    <h1><field name="business_rule_id" readonly="1"/></h1>
                    <group>
                        <group>
                            <field name="active_permanent_rules_count" readonly="1"/>
                            <field name="active_temporary_rules_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_sync_date" readonly="1"/>
                            <field name="sync_status" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Regras Permanentes Ativas">
                            <field name="active_permanent_rules" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="rule_type"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Regras Temporárias Ativas">
                            <field name="active_temporary_rules" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="rule_type"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Fechar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- O modelo business.rules.dashboard já é definido em models/dashboard.py -->
</odoo>
