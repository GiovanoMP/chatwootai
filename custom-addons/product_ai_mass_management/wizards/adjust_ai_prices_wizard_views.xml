<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulário para Ajuste de Preços -->
    <record id="view_adjust_ai_prices_wizard_form" model="ir.ui.view">
        <field name="name">product.ai.price.wizard.form</field>
        <field name="model">product.ai.price.wizard</field>
        <field name="arch" type="xml">
            <form string="Ajustar Preços para Sistema de IA">
                <group>
                    <field name="adjustment_type" widget="radio"/>
                    <field name="base_price" widget="radio"/>
                    <field name="percentage_value" attrs="{'invisible': [('adjustment_type', '!=', 'percentage')], 'required': [('adjustment_type', '=', 'percentage')]}"/>
                    <field name="fixed_value" attrs="{'invisible': [('adjustment_type', '!=', 'fixed')], 'required': [('adjustment_type', '=', 'fixed')]}"/>
                </group>
                <footer>
                    <button name="action_apply_adjustment" string="Aplicar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
