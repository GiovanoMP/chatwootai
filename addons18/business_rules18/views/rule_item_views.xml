<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Itens de Regra -->
    <record id="view_rule_item_form" model="ir.ui.view">
        <field name="name">business.rule.item.form</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rule_type"/>
                            <field name="business_rule_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descrição" name="description">
                            <field name="description" placeholder="Descreva a regra em detalhes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Itens de Regra -->
    <record id="view_rule_item_tree" model="ir.ui.view">
        <field name="name">business.rule.item.tree</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="business_rule_id"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="visible_in_ai" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Itens de Regra -->
    <record id="view_rule_item_search" model="ir.ui.view">
        <field name="name">business.rule.item.search</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="rule_type"/>
                <field name="business_rule_id"/>
                <separator/>
                <filter string="Ativas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Disponíveis no Sistema de IA" name="visible_in_ai" domain="[('visible_in_ai', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Regra" name="rule_type" domain="[]" context="{'group_by': 'rule_type'}"/>
                    <filter string="Regra de Negócio" name="business_rule_id" domain="[]" context="{'group_by': 'business_rule_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Itens de Regra -->
    <record id="action_rule_item" model="ir.actions.act_window">
        <field name="name">Regras de Negócio</field>
        <field name="res_model">business.rule.item</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira regra de negócio
            </p>
            <p>
                As regras de negócio são utilizadas pelo sistema de IA para responder às consultas dos clientes.
            </p>
        </field>
    </record>
</odoo>
