<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Grupo de segurança para gerenciamento de credenciais -->
        <record id="group_ai_credentials_manager" model="res.groups">
            <field name="name">Gerenciador de Credenciais de IA</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Regras de registro para credenciais -->
        <record id="ai_credentials_rule" model="ir.rule">
            <field name="name">Credenciais de IA: apenas administradores</field>
            <field name="model_id" ref="model_ai_system_credentials"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ai_credentials_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regras de registro para logs de acesso -->
        <record id="ai_credentials_log_rule" model="ir.rule">
            <field name="name">Logs de Acesso às Credenciais: apenas administradores</field>
            <field name="model_id" ref="model_ai_credentials_access_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ai_credentials_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regras de registro para fila de sincronização -->
        <record id="ai_sync_queue_rule" model="ir.rule">
            <field name="name">Fila de Sincronização: apenas administradores</field>
            <field name="model_id" ref="model_ai_sync_queue"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_ai_credentials_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
