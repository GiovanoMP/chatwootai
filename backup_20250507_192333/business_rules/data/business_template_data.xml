<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Template para Restaurante/Pizzaria -->
        <record id="business_template_restaurant" model="business.template">
            <field name="name">Restaurante/Pizzaria</field>
            <field name="model_type">restaurant</field>
            <field name="description">Template para restaurantes e pizzarias.</field>
            <field name="default_greeting">Olá! Bem-vindo ao {nome_do_restaurante}. Como posso ajudar você hoje? Gostaria de ver nosso cardápio, fazer um pedido ou tirar alguma dúvida?</field>
            <field name="default_communication_style">friendly</field>
            <field name="default_emoji_usage">moderate</field>
            <field name="default_business_hours_start">11.0</field>
            <field name="default_business_hours_end">23.0</field>
            <field name="default_business_days">Terça a Domingo</field>
        </record>
        
        <!-- Regras padrão para Restaurante/Pizzaria -->
        <record id="rule_restaurant_delivery" model="business.template.rule">
            <field name="name">Política de Entrega</field>
            <field name="description">Entregamos em um raio de até 5km do restaurante. Taxa de entrega de R$ 5,00 para pedidos até R$ 50,00. Acima desse valor, a entrega é gratuita. Tempo médio de entrega: 30 a 45 minutos.</field>
            <field name="template_id" ref="business_template_restaurant"/>
            <field name="priority">1</field>
        </record>
        
        <record id="rule_restaurant_payment" model="business.template.rule">
            <field name="name">Formas de Pagamento</field>
            <field name="description">Aceitamos pagamentos em dinheiro, cartões de crédito/débito e PIX. Para pagamentos em dinheiro, por favor, informe se precisará de troco.</field>
            <field name="template_id" ref="business_template_restaurant"/>
            <field name="priority">0</field>
        </record>
        
        <record id="rule_restaurant_pizza_flavors" model="business.template.rule">
            <field name="name">Sabores de Pizza</field>
            <field name="description">Pizzas pequenas: até 1 sabor. Pizzas médias: até 2 sabores. Pizzas grandes: até 3 sabores. Pizzas gigantes: até 4 sabores.</field>
            <field name="template_id" ref="business_template_restaurant"/>
            <field name="priority">0</field>
        </record>
        
        <!-- Template para E-commerce/Loja Virtual -->
        <record id="business_template_ecommerce" model="business.template">
            <field name="name">E-commerce/Loja Virtual</field>
            <field name="model_type">ecommerce</field>
            <field name="description">Template para lojas virtuais e e-commerces.</field>
            <field name="default_greeting">Olá! Bem-vindo à {nome_da_loja}. Como posso ajudar você hoje? Está procurando algum produto específico ou precisa de informações sobre sua compra?</field>
            <field name="default_communication_style">friendly</field>
            <field name="default_emoji_usage">moderate</field>
            <field name="default_business_hours_start">8.0</field>
            <field name="default_business_hours_end">18.0</field>
            <field name="default_business_days">Segunda a Sexta</field>
        </record>
        
        <!-- Regras padrão para E-commerce/Loja Virtual -->
        <record id="rule_ecommerce_shipping" model="business.template.rule">
            <field name="name">Política de Envio</field>
            <field name="description">Enviamos para todo o Brasil. Frete grátis para compras acima de R$ 200,00. Prazo de envio: 1 a 3 dias úteis para postagem + prazo dos Correios.</field>
            <field name="template_id" ref="business_template_ecommerce"/>
            <field name="priority">1</field>
        </record>
        
        <record id="rule_ecommerce_return" model="business.template.rule">
            <field name="name">Política de Devolução</field>
            <field name="description">Você tem até 7 dias após o recebimento para solicitar a troca ou devolução do produto. O produto deve estar em perfeito estado, na embalagem original e com todos os acessórios.</field>
            <field name="template_id" ref="business_template_ecommerce"/>
            <field name="priority">1</field>
        </record>
        
        <record id="rule_ecommerce_payment" model="business.template.rule">
            <field name="name">Formas de Pagamento</field>
            <field name="description">Aceitamos cartões de crédito (parcelamento em até 12x), boleto bancário (à vista com 5% de desconto) e PIX (à vista com 10% de desconto).</field>
            <field name="template_id" ref="business_template_ecommerce"/>
            <field name="priority">0</field>
        </record>
        
        <!-- Template para Clínica/Consultório -->
        <record id="business_template_clinic" model="business.template">
            <field name="name">Clínica/Consultório</field>
            <field name="model_type">clinic</field>
            <field name="description">Template para clínicas e consultórios médicos/odontológicos.</field>
            <field name="default_greeting">Olá! Bem-vindo à {nome_da_clínica}. Como posso ajudar você hoje? Gostaria de agendar uma consulta, obter informações sobre nossos serviços ou tirar alguma dúvida?</field>
            <field name="default_communication_style">formal</field>
            <field name="default_emoji_usage">none</field>
            <field name="default_business_hours_start">8.0</field>
            <field name="default_business_hours_end">18.0</field>
            <field name="default_business_days">Segunda a Sexta</field>
        </record>
        
        <!-- Regras padrão para Clínica/Consultório -->
        <record id="rule_clinic_scheduling" model="business.template.rule">
            <field name="name">Agendamento de Consultas</field>
            <field name="description">Para agendar uma consulta, precisamos do seu nome completo, telefone, e-mail e convênio (se aplicável). Recomendamos agendar com pelo menos 24 horas de antecedência.</field>
            <field name="template_id" ref="business_template_clinic"/>
            <field name="priority">1</field>
        </record>
        
        <record id="rule_clinic_cancellation" model="business.template.rule">
            <field name="name">Política de Cancelamento</field>
            <field name="description">Cancelamentos devem ser feitos com pelo menos 4 horas de antecedência. Cancelamentos com menos de 4 horas ou não comparecimento podem estar sujeitos a cobrança de taxa.</field>
            <field name="template_id" ref="business_template_clinic"/>
            <field name="priority">1</field>
        </record>
        
        <record id="rule_clinic_insurance" model="business.template.rule">
            <field name="name">Convênios Aceitos</field>
            <field name="description">Aceitamos os seguintes convênios: Unimed, Bradesco Saúde, SulAmérica, Amil e outros. Para verificar se seu convênio é aceito, por favor, entre em contato conosco.</field>
            <field name="template_id" ref="business_template_clinic"/>
            <field name="priority">0</field>
        </record>
    </data>
</odoo>
