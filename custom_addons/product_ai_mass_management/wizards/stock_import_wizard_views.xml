<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulário do Wizard de Importação de Produtos -->
    <record id="view_stock_import_wizard_form" model="ir.ui.view">
        <field name="name">stock.import.wizard.form</field>
        <field name="model">stock.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importação de Produtos">
                <!-- Cabeçalho -->
                <div class="alert alert-info" role="alert">
                    <p>Este assistente permite importar produtos a partir de arquivos Excel ou JSON.</p>
                    <p>Os produtos importados serão automaticamente sincronizados com o estoque e o sistema de IA.</p>
                </div>
                
                <!-- Configurações -->
                <group>
                    <group>
                        <field name="file_format" widget="radio"/>
                        <field name="import_file" filename="import_filename" required="1"/>
                        <field name="import_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="update_existing"/>
                        <field name="create_categories"/>
                    </group>
                </group>
                
                <!-- Instruções -->
                <div class="alert alert-warning" role="alert">
                    <p><strong>Formato do arquivo Excel:</strong></p>
                    <p>O arquivo deve conter colunas com os nomes dos campos dos produtos. Campos obrigatórios: Nome ou Código.</p>
                    <p>Campos suportados: Nome, Código, Código de Barras, Preço, Custo, Descrição, Categoria, Tipo, Peso, Volume, Ativo.</p>
                </div>
                
                <!-- Botões -->
                <footer>
                    <button name="action_import" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Ação para o Wizard de Importação de Produtos -->
    <record id="action_stock_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Produtos</field>
        <field name="res_model">stock.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
    </record>
    
    <!-- Menu para o Wizard -->
    <menuitem id="menu_stock_import_wizard"
              name="Importar Produtos"
              parent="menu_ai_system_root"
              action="action_stock_import_wizard"
              sequence="15"/>
</odoo>
