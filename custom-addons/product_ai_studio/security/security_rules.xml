<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categoria de Segurança -->
        <record id="module_category_product_ai_studio" model="ir.module.category">
            <field name="name">Estúdio de Produtos com IA</field>
            <field name="description">Gerencia o acesso ao Estúdio de Produtos com IA</field>
            <field name="sequence">50</field>
        </record>

        <!-- Grupo de Usuário -->
        <record id="group_product_ai_studio_user" model="res.groups">
            <field name="name">Usuário</field>
            <field name="category_id" ref="module_category_product_ai_studio"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo de Gerente -->
        <record id="group_product_ai_studio_manager" model="res.groups">
            <field name="name">Gerente</field>
            <field name="category_id" ref="module_category_product_ai_studio"/>
            <field name="implied_ids" eval="[(4, ref('group_product_ai_studio_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Regras de Acesso -->
        <record id="product_enrichment_comp_rule" model="ir.rule">
            <field name="name">Enriquecimento de Produto: regra multi-empresa</field>
            <field name="model_id" ref="model_product_enrichment"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="product_marketplace_comp_rule" model="ir.rule">
            <field name="name">Marketplace: regra multi-empresa</field>
            <field name="model_id" ref="model_product_marketplace"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="product_enrichment_profile_comp_rule" model="ir.rule">
            <field name="name">Perfil de Enriquecimento: regra multi-empresa</field>
            <field name="model_id" ref="model_product_enrichment_profile"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="product_marketplace_description_comp_rule" model="ir.rule">
            <field name="name">Descrição de Marketplace: regra multi-empresa</field>
            <field name="model_id" ref="model_product_marketplace_description"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="product_suggested_image_comp_rule" model="ir.rule">
            <field name="name">Imagem Sugerida: regra multi-empresa</field>
            <field name="model_id" ref="model_product_suggested_image"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
