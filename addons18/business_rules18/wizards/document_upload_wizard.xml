<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para o Assistente de Upload de Documentos -->
    <record id="view_document_upload_wizard_form" model="ir.ui.view">
        <field name="name">business.document.upload.wizard.form</field>
        <field name="model">business.document.upload.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Nome do Documento"/>
                            <field name="document_type"/>
                            <field name="business_rule_id"/>
                        </group>
                        <group>
                            <field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conteúdo" name="content">
                            <field name="content" placeholder="Conteúdo do documento..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_upload" string="Upload" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Ação para o Assistente de Upload de Documentos -->
    <record id="action_document_upload_wizard" model="ir.actions.act_window">
        <field name="name">Upload de Documento</field>
        <field name="res_model">business.document.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_business_rule_id': active_id}</field>
    </record>
</odoo>
