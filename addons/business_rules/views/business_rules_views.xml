<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Regras de Negócio -->
    <record id="view_business_rules_form" model="ir.ui.view">
        <field name="name">business.rules.form</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <form string="Regras de Negócio">
                <header>
                    <button name="action_sync_with_ai" string="Sincronizar com Sistema de IA" type="object" class="btn btn-success" style="background-color: #28a745 !important; color: white !important;"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,syncing,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-robot">
                            <field name="visible_in_ai" widget="boolean_button" options="{'terminology': {'string_true': 'Disponível no IA', 'string_false': 'Indisponível no IA', 'hover_true': 'Tornar Indisponível no Sistema de IA', 'hover_false': 'Tornar Disponível no Sistema de IA'}}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome da Empresa"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="website" placeholder="https://www.exemplo.com.br"/>
                            <field name="business_area"/>
                            <field name="business_area_other" attrs="{'invisible': [('business_area', '!=', 'other')], 'required': [('business_area', '=', 'other')]}"/>
                        </group>
                        <group>
                            <field name="last_sync_date" readonly="1"/>
                            <field name="sync_status" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Informações Básicas">
                            <div class="alert alert-info" role="alert">
                                <p>Configure aqui as informações básicas da empresa que serão utilizadas pelo agente de IA.</p>
                            </div>

                            <group>
                                <group>
                                    <field name="description" placeholder="Descrição da empresa e seus serviços..."/>
                                    <field name="company_values" placeholder="Valores que sua marca representa..."/>
                                </group>
                            </group>

                            <group string="Endereço da Empresa">
                                <group>
                                    <field name="street" placeholder="Rua, número"/>
                                    <field name="street2" placeholder="Complemento"/>
                                    <field name="city" placeholder="Cidade"/>
                                </group>
                                <group>
                                    <field name="state" placeholder="Estado"/>
                                    <field name="zip" placeholder="CEP"/>
                                    <field name="country"/>
                                    <field name="share_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Configurações de Atendimento">
                            <div class="alert alert-info" role="alert">
                                <p>Configure aqui os horários de funcionamento e o estilo de comunicação que o agente de IA deve utilizar ao interagir com seus clientes.</p>
                            </div>


                            <!-- Bloco de Comunicação -->
                            <group string="Comunicação">
                                <group>
                                    <field name="greeting_message" placeholder="Olá! Bem-vindo à [Nome da Empresa]. Como posso ajudar?"/>
                                    <field name="communication_style"/>
                                    <field name="emoji_usage"/>
                                </group>
                                <group>
                                    <!-- Espaço em branco para manter o layout -->
                                </group>
                            </group>

                            <!-- Bloco de Horário de Funcionamento -->
                            <group string="Horário de Funcionamento">
                                <group>
                                    <field name="business_hours_start" widget="float_time"/>
                                    <field name="business_hours_end" widget="float_time"/>
                                    <field name="has_lunch_break"/>
                                </group>
                                <group>
                                    <field name="lunch_break_start" widget="float_time" attrs="{'invisible': [('has_lunch_break', '=', False)], 'required': [('has_lunch_break', '=', True)]}"/>
                                    <field name="lunch_break_end" widget="float_time" attrs="{'invisible': [('has_lunch_break', '=', False)], 'required': [('has_lunch_break', '=', True)]}"/>
                                </group>
                            </group>

                            <!-- Bloco de Dias de Funcionamento -->
                            <group string="Dias de Funcionamento">
                                <group>
                                    <field name="monday"/>
                                    <field name="tuesday"/>
                                    <field name="wednesday"/>
                                    <field name="thursday"/>
                                    <field name="friday"/>
                                </group>
                                <group>
                                    <field name="saturday"/>
                                    <field name="saturday_hours_start" widget="float_time" attrs="{'invisible': [('saturday', '=', False)], 'required': [('saturday', '=', True)]}"/>
                                    <field name="saturday_hours_end" widget="float_time" attrs="{'invisible': [('saturday', '=', False)], 'required': [('saturday', '=', True)]}"/>
                                    <field name="sunday"/>
                                </group>
                            </group>

                            <!-- Bloco de Site e Redes Sociais -->
                            <group string="Site e Redes Sociais">
                                <p class="text-muted">Configure se o agente pode mencionar o site e redes sociais da empresa ao finalizar a conversa com o cliente.</p>
                            </group>

                            <!-- Site -->
                            <group>
                                <group string="Site da Empresa">
                                    <field name="website" placeholder="https://www.suaempresa.com.br"/>
                                    <field name="mention_website_at_end"/>
                                </group>
                                <group>
                                    <!-- Espaço em branco para manter o layout -->
                                </group>
                            </group>

                            <!-- Facebook -->
                            <group>
                                <group string="Facebook">
                                    <field name="facebook_url" placeholder="https://www.facebook.com/suaempresa"/>
                                    <field name="mention_facebook_at_end"/>
                                </group>
                                <group>
                                    <!-- Espaço em branco para manter o layout -->
                                </group>
                            </group>

                            <!-- Instagram -->
                            <group>
                                <group string="Instagram">
                                    <field name="instagram_url" placeholder="https://www.instagram.com/suaempresa"/>
                                    <field name="mention_instagram_at_end"/>
                                </group>
                                <group>
                                    <!-- Espaço em branco para manter o layout -->
                                </group>
                            </group>
                        </page>
                        <page string="Regras de Negócio e Promoções">
                            <div class="alert alert-info" role="alert">
                                <p>Configure aqui as regras que definem o comportamento do agente de IA. Você pode criar regras permanentes ou temporárias/promoções com período de validade definido.</p>
                            </div>

                            <group>
                                <field name="inform_promotions_at_start" widget="boolean_toggle"/>
                            </group>

                            <h3>Regras de Negócio e Promoções</h3>
                            <field name="temporary_rule_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="rule_type_display"/>
                                    <field name="is_temporary" invisible="1"/>
                                    <field name="date_start" attrs="{'invisible': [('is_temporary', '=', False)]}"/>
                                    <field name="date_end" attrs="{'invisible': [('is_temporary', '=', False)]}"/>
                                    <field name="state" decoration-success="state == 'active'" decoration-warning="state == 'draft'" decoration-danger="state == 'expired'" decoration-muted="state == 'cancelled'"/>
                                    <field name="visible_in_ai" widget="boolean_toggle" string="Disponível no Sistema de IA"/>
                                    <button name="unlink" type="object" string="Excluir" confirm="Atenção: Esta ação excluirá permanentemente a regra e não poderá ser desfeita. Deseja continuar?"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="rule_type"/>
                                                <field name="is_temporary"/>
                                            </group>
                                            <group>
                                                <field name="date_start" attrs="{'invisible': [('is_temporary', '=', False)], 'required': [('is_temporary', '=', True)]}"/>
                                                <field name="date_end" attrs="{'invisible': [('is_temporary', '=', False)], 'required': [('is_temporary', '=', True)]}"/>
                                                <field name="visible_in_ai" string="Disponível no Sistema de IA"/>
                                            </group>
                                        </group>
                                        <group string="Descrição">
                                            <field name="description" nolabel="1" placeholder="Descreva a regra em detalhes..."/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Regras de Agendamento">
                            <div class="alert alert-info" role="alert">
                                <p>Configure aqui as regras de agendamento que o agente de IA deve seguir ao lidar com solicitações de agendamento dos clientes.</p>
                            </div>

                            <!-- Botões de Ação -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <button name="action_sync_scheduling_rules"
                                            string="Sincronizar com Sistema de IA"
                                            type="object"
                                            class="btn btn-primary"
                                            style="background-color: #00a09d !important; color: white !important;"
                                            icon="fa-refresh"/>
                                    <button name="action_view_scheduling_rules"
                                            string="Ver no Sistema de IA"
                                            type="object"
                                            class="btn btn-secondary"
                                            icon="fa-eye"/>
                                </div>
                            </div>

                            <field name="scheduling_rule_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="service_type"/>
                                    <field name="duration" widget="float_time"/>
                                    <field name="sync_status" decoration-success="sync_status == 'synced'" decoration-danger="sync_status == 'error'" decoration-info="sync_status == 'not_synced'"/>
                                    <field name="visible_in_ai" widget="boolean_toggle" string="Disponível no Sistema de IA"/>
                                    <button name="unlink" type="object" string="Excluir" confirm="Atenção: Esta ação excluirá permanentemente a regra e não poderá ser desfeita. Deseja continuar?"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documentos de Suporte ao Cliente">
                            <div class="alert alert-info" role="alert">
                                <p><strong>Importante:</strong> Nesta aba você pode gerenciar documentos relacionados ao suporte ao cliente. Estes documentos serão vetorizados e utilizados pelo agente de IA para responder dúvidas dos clientes.</p>
                            </div>

                            <!-- Botões de Ação -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <button name="action_upload_documents"
                                            string="Adicionar Documento"
                                            type="object"
                                            class="btn btn-primary"
                                            icon="fa-plus"/>
                                </div>
                            </div>

                            <!-- Documentos de Suporte -->
                            <div class="row">
                                <div class="col-12">
                                    <h3>Documentos Cadastrados</h3>
                                    <field name="support_document_ids" options="{'no_create': True, 'no_create_edit': True}" widget="many2many" nolabel="1" context="{'active_test': False}">
                                        <tree>
                                            <field name="name"/>
                                            <field name="document_type"/>
                                            <field name="create_date"/>
                                            <field name="sync_status" decoration-success="sync_status == 'synced'" decoration-danger="sync_status == 'error'" decoration-info="sync_status == 'not_synced'"/>
                                            <field name="visible_in_ai" widget="boolean_toggle" string="Disponível no Sistema de IA"/>
                                            <button name="action_delete_document" type="object" string="Excluir" confirm="Atenção: Esta ação excluirá permanentemente o documento e não poderá ser desfeita. Deseja continuar?"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Regras de Negócio -->
    <record id="view_business_rules_tree" model="ir.ui.view">
        <field name="name">business.rules.tree</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <tree string="Regras de Negócio">
                <field name="name"/>
                <field name="business_area"/>
                <field name="active_permanent_rules_count" string="Regras Permanentes"/>
                <field name="active_temporary_rules_count" string="Regras Temporárias"/>
                <field name="last_sync_date"/>
                <field name="sync_status" decoration-success="sync_status == 'synced'" decoration-danger="sync_status == 'error'" decoration-info="sync_status == 'not_synced'"/>
                <field name="visible_in_ai" widget="boolean_toggle" string="Disponível no Sistema de IA"/>
                <button name="unlink" type="object" string="Excluir" confirm="Atenção: Esta ação excluirá permanentemente a regra e não poderá ser desfeita. Deseja continuar?"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Regras de Negócio -->
    <record id="view_business_rules_search" model="ir.ui.view">
        <field name="name">business.rules.search</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <search string="Regras de Negócio">
                <field name="name"/>
                <field name="business_area"/>
                <filter string="Sincronizadas" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Não Sincronizadas" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Com Erro" name="error" domain="[('sync_status', '=', 'error')]"/>
                <separator/>
                <filter string="Disponíveis no Sistema de IA" name="visible_in_ai" domain="[('visible_in_ai', '=', True)]"/>
                <filter string="Indisponíveis no Sistema de IA" name="not_visible_in_ai" domain="[('visible_in_ai', '=', False)]"/>

                <group expand="0" string="Agrupar Por">
                    <filter string="Área de Negócio" name="group_by_area" context="{'group_by': 'business_area'}"/>
                    <filter string="Status de Sincronização" name="group_by_sync" context="{'group_by': 'sync_status'}"/>
                    <filter string="Disponibilidade no Sistema de IA" name="group_by_visible_in_ai" context="{'group_by': 'visible_in_ai'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Regras de Negócio -->
    <record id="action_business_rules" model="ir.actions.act_window">
        <field name="name">Regras de Negócio</field>
        <field name="res_model">business.rules</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_business_rules_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira regra de negócio!
            </p>
            <p>
                As regras de negócio permitem personalizar o comportamento dos agentes de IA de acordo com as especificidades do seu negócio.
            </p>
        </field>
    </record>
</odoo>
