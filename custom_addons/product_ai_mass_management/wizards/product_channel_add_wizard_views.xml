<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulário do Wizard para Adicionar Produtos a Canais -->
    <record id="view_product_channel_add_wizard_form" model="ir.ui.view">
        <field name="name">product.channel.add.wizard.form</field>
        <field name="model">product.channel.add.wizard</field>
        <field name="arch" type="xml">
            <form string="Adicionar Produtos ao Canal">
                <group>
                    <group>
                        <field name="channel_id" options="{'no_create': True}" required="1"/>
                        <field name="price_option" widget="radio"/>
                        <field name="price_multiplier" attrs="{'invisible': [('price_option', '!=', 'multiplier')], 'required': [('price_option', '=', 'multiplier')]}"/>
                        <field name="fixed_price" attrs="{'invisible': [('price_option', '!=', 'fixed')], 'required': [('price_option', '=', 'fixed')]}"/>
                    </group>
                    <group>
                        <field name="auto_sync"/>
                        <field name="product_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_add_to_channel" string="Adicionar ao Canal" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Ação para o Wizard de Adicionar a Canal -->
    <record id="action_product_channel_add_wizard" model="ir.actions.act_window">
        <field name="name">Adicionar ao Canal</field>
        <field name="res_model">product.channel.add.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
