<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Documentos de Suporte -->
    <record id="view_business_support_document_form" model="ir.ui.view">
        <field name="name">business.support.document.form</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <form string="Documento de Suporte">
                <header>
                    <button name="action_sync_document" string="Sincronizar com IA" type="object" class="btn-success" attrs="{'invisible': [('sync_status', '=', 'syncing')]}"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,syncing,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome do Documento"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_type"/>
                            <field name="business_rule_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="last_sync_date" readonly="1"/>
                            <field name="sync_status" readonly="1"/>
                            <field name="vector_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conteúdo">
                            <field name="content" placeholder="Conteúdo do documento..."/>
                        </page>
                        <page string="Anexos">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Documentos de Suporte -->
    <record id="view_business_support_document_tree" model="ir.ui.view">
        <field name="name">business.support.document.tree</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <tree string="Documentos de Suporte" decoration-muted="active == False">
                <field name="name"/>
                <field name="document_type"/>
                <field name="business_rule_ids" widget="many2many_tags"/>
                <field name="last_sync_date"/>
                <field name="sync_status" decoration-success="sync_status == 'synced'" decoration-danger="sync_status == 'error'" decoration-info="sync_status == 'not_synced'"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Documentos de Suporte -->
    <record id="view_business_support_document_search" model="ir.ui.view">
        <field name="name">business.support.document.search</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <search string="Documentos de Suporte">
                <field name="name"/>
                <field name="document_type"/>
                <field name="business_rule_ids"/>
                <filter string="Sincronizados" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Não Sincronizados" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Com Erro" name="error" domain="[('sync_status', '=', 'error')]"/>
                <separator/>
                <filter string="Arquivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Documento" name="group_by_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Status de Sincronização" name="group_by_sync" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Documentos de Suporte -->
    <record id="action_business_support_document" model="ir.actions.act_window">
        <field name="name">Documentos de Suporte</field>
        <field name="res_model">business.support.document</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_business_support_document_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro documento de suporte!
            </p>
            <p>
                Os documentos de suporte permitem fornecer informações para o sistema de IA responder dúvidas dos clientes.
            </p>
        </field>
    </record>

    <!-- Item de Menu para Documentos de Suporte -->
    <menuitem id="menu_business_support_document"
              name="Documentos de Suporte"
              parent="menu_business_rules_root"
              action="action_business_support_document"
              sequence="30"/>
</odoo>
