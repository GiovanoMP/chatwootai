<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Regras Permanentes -->
    <record id="view_business_rule_item_form" model="ir.ui.view">
        <field name="name">business.rule.item.form</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <form string="Regra de Negócio">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="business_rule_id"/>
                        <field name="rule_type"/>
                        <field name="active"/>
                    </group>
                    <group string="Descrição">
                        <field name="description" nolabel="1" placeholder="Descreva a regra em detalhes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Regras Permanentes -->
    <record id="view_business_rule_item_tree" model="ir.ui.view">
        <field name="name">business.rule.item.tree</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <tree string="Regras de Negócio" decoration-muted="active == False">
                <field name="name"/>
                <field name="business_rule_id"/>
                <field name="rule_type"/>
                <field name="active" widget="boolean_toggle"/>
                <button name="unlink" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Regras Permanentes -->
    <record id="view_business_rule_item_search" model="ir.ui.view">
        <field name="name">business.rule.item.search</field>
        <field name="model">business.rule.item</field>
        <field name="arch" type="xml">
            <search string="Regras de Negócio">
                <field name="name"/>
                <field name="business_rule_id"/>
                <field name="rule_type"/>
                <filter string="Ativas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inativas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Regra de Negócio" name="group_by_business_rule" context="{'group_by': 'business_rule_id'}"/>
                    <filter string="Tipo de Regra" name="group_by_rule_type" context="{'group_by': 'rule_type'}"/>
                    <!-- Filtro de prioridade removido -->
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Regras Permanentes -->
    <record id="action_business_rule_item" model="ir.actions.act_window">
        <field name="name">Regras Permanentes</field>
        <field name="res_model">business.rule.item</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_business_rule_item_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira regra permanente!
            </p>
            <p>
                As regras permanentes definem o comportamento padrão dos agentes de IA.
            </p>
        </field>
    </record>
</odoo>
