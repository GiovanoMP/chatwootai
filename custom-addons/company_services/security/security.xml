<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_company_services_category" model="ir.module.category">
        <field name="name">Empresa e Serviços</field>
        <field name="description">Gerencia as permissões para o módulo Empresa e Serviços</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_company_services_user" model="res.groups">
        <field name="name">Usuário</field>
        <field name="category_id" ref="module_company_services_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_company_services_manager" model="res.groups">
        <field name="name">Gerente</field>
        <field name="category_id" ref="module_company_services_category"/>
        <field name="implied_ids" eval="[(4, ref('group_company_services_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
