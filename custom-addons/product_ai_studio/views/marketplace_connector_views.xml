<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_marketplace_connector_form" model="ir.ui.view">
            <field name="name">product.marketplace.form</field>
            <field name="model">product.marketplace</field>
            <field name="arch" type="xml">
                <form string="Conector de Marketplace">
                    <header>
                        <button name="test_connection" type="object" string="Testar Conexão" class="btn-primary"/>
                        <button name="refresh_token" type="object" string="Atualizar Token" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                            <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cubes">
                                <field name="product_count" string="Produtos" widget="statinfo"/>
                            </button>
                            <button name="action_view_descriptions" type="object" class="oe_stat_button" icon="fa-file-text-o">
                                <field name="description_count" string="Descrições" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Nome do Marketplace"/></h1>
                        </div>
                        
                        <!-- Alertas e Banners -->
                        <div class="alert alert-info mb-4" role="alert" style="border-left: 4px solid #2196F3; background-color: #f8f9fa;">
                            <div class="d-flex">
                                <i class="fa fa-info-circle fa-2x me-3 text-primary"></i>
                                <div>
                                    <h4 class="alert-heading">Conector de Marketplace</h4>
                                    <p class="mb-0">Configure as credenciais e opções para integração com o marketplace. Após configurar, teste a conexão para verificar se está tudo funcionando corretamente.</p>
                                </div>
                            </div>
                        </div>
                        
                        <notebook>
                            <page string="Configurações Gerais" name="general_settings">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #2196F3; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Informações Básicas</h3>
                                            <group>
                                                <field name="marketplace_type" widget="radio"/>
                                                <field name="code" placeholder="Código único para identificação interna"/>
                                                <field name="description" placeholder="Descrição detalhada do marketplace"/>
                                                <field name="website" widget="url" placeholder="https://www.exemplo.com.br"/>
                                                <field name="country_id" options="{'no_create': True, 'no_open': True}"/>
                                            </group>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #4CAF50; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Configurações de API</h3>
                                            <group>
                                                <field name="api_base_url" placeholder="https://api.exemplo.com.br"/>
                                                <field name="api_version" placeholder="v1"/>
                                                <field name="api_key" password="True"/>
                                                <field name="api_secret" password="True"/>
                                                <field name="token" password="True"/>
                                                <field name="token_expiry"/>
                                            </group>
                                        </div>
                                        
                                        <div class="card" style="border-left: 4px solid #FFC107; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Opções Avançadas</h3>
                                            <div class="o_horizontal_separator mb-3">Configurações de Sincronização</div>
                                            <div class="d-flex flex-column">
                                                <div class="custom-control custom-switch mb-2">
                                                    <field name="auto_sync" widget="boolean_toggle"/>
                                                    <label for="auto_sync" class="ml-2">Sincronização Automática</label>
                                                </div>
                                                <div class="custom-control custom-switch mb-2">
                                                    <field name="auto_publish" widget="boolean_toggle"/>
                                                    <label for="auto_publish" class="ml-2">Publicação Automática</label>
                                                </div>
                                                <div class="custom-control custom-switch mb-2">
                                                    <field name="sync_stock" widget="boolean_toggle"/>
                                                    <label for="sync_stock" class="ml-2">Sincronizar Estoque</label>
                                                </div>
                                                <div class="custom-control custom-switch mb-2">
                                                    <field name="sync_price" widget="boolean_toggle"/>
                                                    <label for="sync_price" class="ml-2">Sincronizar Preço</label>
                                                </div>
                                            </div>
                                            <group>
                                                <field name="sync_interval" attrs="{'invisible': [('auto_sync', '=', False)]}"/>
                                                <field name="last_sync" readonly="1"/>
                                            </group>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            
                            <page string="Mapeamento de Categorias" name="category_mapping">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Mapeamento de Categorias</h3>
                                    <p class="text-muted">Mapeie as categorias do Odoo para as categorias do marketplace.</p>
                                    <field name="category_mapping_ids">
                                        <tree editable="bottom">
                                            <field name="odoo_category_id"/>
                                            <field name="marketplace_category_id"/>
                                            <field name="marketplace_category_name"/>
                                            <field name="marketplace_category_code"/>
                                            <field name="is_leaf_category"/>
                                        </tree>
                                    </field>
                                </div>
                            </page>
                            
                            <page string="Atributos Obrigatórios" name="required_attributes">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Atributos Obrigatórios</h3>
                                    <p class="text-muted">Configure os atributos obrigatórios para publicação no marketplace.</p>
                                    <field name="required_attribute_ids">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="attribute_code"/>
                                            <field name="is_required"/>
                                            <field name="odoo_field_id"/>
                                            <field name="default_value"/>
                                            <field name="validation_regex"/>
                                        </tree>
                                    </field>
                                </div>
                            </page>
                            
                            <page string="Logs e Histórico" name="logs">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Logs de Sincronização</h3>
                                    <field name="sync_log_ids">
                                        <tree>
                                            <field name="create_date" string="Data"/>
                                            <field name="operation"/>
                                            <field name="status"/>
                                            <field name="message"/>
                                            <field name="product_id"/>
                                        </tree>
                                    </field>
                                </div>
                            </page>
                            
                            <page string="Estatísticas" name="statistics">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #2196F3; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Estatísticas de Produtos</h3>
                                            <group>
                                                <field name="product_count" readonly="1"/>
                                                <field name="published_product_count" readonly="1"/>
                                                <field name="pending_product_count" readonly="1"/>
                                                <field name="error_product_count" readonly="1"/>
                                            </group>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #4CAF50; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Performance</h3>
                                            <group>
                                                <field name="avg_sync_time" readonly="1" widget="float_time"/>
                                                <field name="success_rate" readonly="1" widget="percentage"/>
                                                <field name="last_error" readonly="1"/>
                                                <field name="last_error_date" readonly="1"/>
                                            </group>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Tree View -->
        <record id="view_marketplace_connector_tree" model="ir.ui.view">
            <field name="name">product.marketplace.tree</field>
            <field name="model">product.marketplace</field>
            <field name="arch" type="xml">
                <tree string="Conectores de Marketplace" decoration-muted="active == False" decoration-danger="last_error != False" decoration-success="success_rate >= 90">
                    <field name="name"/>
                    <field name="marketplace_type"/>
                    <field name="api_base_url"/>
                    <field name="product_count"/>
                    <field name="published_product_count"/>
                    <field name="last_sync"/>
                    <field name="success_rate" widget="percentage"/>
                    <field name="last_error"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_marketplace_connector_search" model="ir.ui.view">
            <field name="name">product.marketplace.search</field>
            <field name="model">product.marketplace</field>
            <field name="arch" type="xml">
                <search string="Conectores de Marketplace">
                    <field name="name"/>
                    <field name="marketplace_type"/>
                    <field name="code"/>
                    <field name="api_base_url"/>
                    <field name="country_id"/>
                    
                    <filter string="Arquivados" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Mercado Livre" name="mercadolivre" domain="[('marketplace_type', '=', 'mercadolivre')]"/>
                    <filter string="Amazon" name="amazon" domain="[('marketplace_type', '=', 'amazon')]"/>
                    <filter string="Shopee" name="shopee" domain="[('marketplace_type', '=', 'shopee')]"/>
                    <filter string="Magalu" name="magalu" domain="[('marketplace_type', '=', 'magalu')]"/>
                    <separator/>
                    <filter string="Com Erro" name="with_error" domain="[('last_error', '!=', False)]"/>
                    <filter string="Sincronização Automática" name="auto_sync" domain="[('auto_sync', '=', True)]"/>
                    
                    <group expand="0" string="Agrupar Por">
                        <filter string="Tipo de Marketplace" name="group_by_type" context="{'group_by': 'marketplace_type'}"/>
                        <filter string="País" name="group_by_country" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Kanban View -->
        <record id="view_marketplace_connector_kanban" model="ir.ui.view">
            <field name="name">product.marketplace.kanban</field>
            <field name="model">product.marketplace</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="name"/>
                    <field name="marketplace_type"/>
                    <field name="product_count"/>
                    <field name="published_product_count"/>
                    <field name="pending_product_count"/>
                    <field name="error_product_count"/>
                    <field name="last_sync"/>
                    <field name="success_rate"/>
                    <field name="last_error"/>
                    <field name="auto_sync"/>
                    <field name="auto_publish"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle">
                                            <t t-if="record.marketplace_type.raw_value == 'mercadolivre'">
                                                <i class="fa fa-shopping-cart"/> Mercado Livre
                                            </t>
                                            <t t-elif="record.marketplace_type.raw_value == 'amazon'">
                                                <i class="fa fa-amazon"/> Amazon
                                            </t>
                                            <t t-elif="record.marketplace_type.raw_value == 'shopee'">
                                                <i class="fa fa-shopping-bag"/> Shopee
                                            </t>
                                            <t t-elif="record.marketplace_type.raw_value == 'magalu'">
                                                <i class="fa fa-store"/> Magalu
                                            </t>
                                            <t t-else="">
                                                <i class="fa fa-globe"/> <field name="marketplace_type"/>
                                            </t>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="text-muted">Produtos: </span>
                                            <span><field name="product_count"/></span>
                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="text-muted">Publicados: </span>
                                            <span><field name="published_product_count"/></span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <span class="text-muted">Pendentes: </span>
                                            <span><field name="pending_product_count"/></span>
                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="text-muted">Erros: </span>
                                            <span t-attf-class="#{record.error_product_count.raw_value > 0 ? 'text-danger' : ''}">
                                                <field name="error_product_count"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <span t-if="record.auto_sync.raw_value" class="badge badge-pill badge-primary mr-1">
                                            <i class="fa fa-sync"/> Auto-sincronização
                                        </span>
                                        <span t-if="record.auto_publish.raw_value" class="badge badge-pill badge-primary">
                                            <i class="fa fa-upload"/> Auto-publicação
                                        </span>
                                    </div>
                                    <div class="mt-2" t-if="record.last_error.raw_value">
                                        <div class="alert alert-danger p-2" role="alert">
                                            <small><field name="last_error"/></small>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="text-muted">Última Sincronização: </span>
                                        <span><field name="last_sync"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-attf-class="badge badge-pill #{record.success_rate.raw_value >= 90 ? 'badge-success' : record.success_rate.raw_value >= 70 ? 'badge-warning' : 'badge-danger'}">
                                            <t t-esc="Math.round(record.success_rate.raw_value)"/>%
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_marketplace_connector" model="ir.actions.act_window">
            <field name="name">Conectores de Marketplace</field>
            <field name="res_model">product.marketplace</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_marketplace_connector_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure seu primeiro conector de marketplace!
                </p>
                <p>
                    Os conectores de marketplace permitem integrar seus produtos com diferentes plataformas de vendas.
                    Configure as credenciais de API e opções de sincronização para cada marketplace.
                </p>
            </field>
        </record>
        
        <!-- Menu definido em menu_views.xml -->
    </data>
</odoo>
