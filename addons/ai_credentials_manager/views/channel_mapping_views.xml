<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visualização de formulário para mapeamento de canais -->
    <record id="view_ai_channel_mapping_form" model="ir.ui.view">
        <field name="name">ai.channel.mapping.form</field>
        <field name="model">ai.channel.mapping</field>
        <field name="arch" type="xml">
            <form string="Mapeamento de Canal">
                <header>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="chatwoot_account_id"/>
                            <field name="chatwoot_inbox_id"/>
                            <field name="credential_id" domain="[('active', '=', True)]"/>
                            <field name="internal_account_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="business_area"/>
                            <field name="business_area_other" attrs="{'invisible': [('business_area', '!=', 'other')], 'required': [('business_area', '=', 'other')]}"/>
                            <field name="active"/>
                            <field name="is_fallback"/>
                            <field name="sequence" attrs="{'invisible': [('is_fallback', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Números Especiais de WhatsApp">
                            <group>
                                <field name="special_whatsapp_number1"/>
                                <field name="special_whatsapp_number2"/>
                                <field name="special_whatsapp_number3"/>
                                <field name="special_crew"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p><strong>Números Especiais de WhatsApp:</strong> Mensagens destes números serão direcionadas para a crew especial selecionada.</p>
                                <p>Formato: número internacional completo (ex: +5511999999999)</p>
                            </div>
                        </page>
                        <page string="Status de Sincronização" attrs="{'invisible': [('sync_status', '=', 'not_synced')]}">
                            <group>
                                <field name="last_sync" readonly="1"/>
                                <field name="error_message" readonly="1" attrs="{'invisible': [('sync_status', '!=', 'error')]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Visualização de árvore para mapeamento de canais -->
    <record id="view_ai_channel_mapping_tree" model="ir.ui.view">
        <field name="name">ai.channel.mapping.tree</field>
        <field name="model">ai.channel.mapping</field>
        <field name="arch" type="xml">
            <tree string="Mapeamentos de Canal">
                <field name="chatwoot_account_id"/>
                <field name="chatwoot_inbox_id"/>
                <field name="internal_account_id"/>
                <field name="business_area"/>
                <field name="is_fallback"/>
                <field name="sync_status"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Visualização de pesquisa para mapeamento de canais -->
    <record id="view_ai_channel_mapping_search" model="ir.ui.view">
        <field name="name">ai.channel.mapping.search</field>
        <field name="model">ai.channel.mapping</field>
        <field name="arch" type="xml">
            <search string="Mapeamentos de Canal">
                <field name="name"/>
                <field name="chatwoot_account_id"/>
                <field name="chatwoot_inbox_id"/>
                <field name="credential_id"/>
                <field name="internal_account_id"/>
                <filter string="Ativos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inativos" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Fallbacks" name="fallbacks" domain="[('is_fallback', '=', True)]"/>
                <filter string="Não Sincronizados" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Com Erro" name="error" domain="[('sync_status', '=', 'error')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Área de Negócio" name="group_by_business_area" context="{'group_by': 'business_area'}"/>
                    <filter string="Credencial" name="group_by_credential" context="{'group_by': 'credential_id'}"/>
                    <filter string="Status de Sincronização" name="group_by_sync_status" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para mapeamento de canais -->
    <record id="action_ai_channel_mapping" model="ir.actions.act_window">
        <field name="name">Mapeamentos de Canal</field>
        <field name="res_model">ai.channel.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro mapeamento de canal
            </p>
            <p>
                Os mapeamentos de canal são usados para direcionar mensagens do Chatwoot para o sistema de IA.
            </p>
        </field>
    </record>

    <!-- Ação para sincronizar todos os mapeamentos -->
    <record id="action_sync_all_mappings" model="ir.actions.server">
        <field name="name">Sincronizar Todos os Mapeamentos</field>
        <field name="model_id" ref="model_ai_channel_mapping"/>
        <field name="binding_model_id" ref="model_ai_channel_mapping"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.action_sync_all_mappings()</field>
    </record>

    <!-- Menu para mapeamento de canais -->
    <menuitem id="menu_ai_channel_mapping"
              name="Mapeamentos de Canal"
              parent="menu_ai_credentials_root"
              action="action_ai_channel_mapping"
              sequence="40"/>
</odoo>
