<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visualizador de Configurações -->
    <record id="view_config_viewer_form" model="ir.ui.view">
        <field name="name">config.viewer.form</field>
        <field name="model">config.viewer</field>
        <field name="arch" type="xml">
            <form string="Visualizador de Configurações">
                <sheet>
                    <group>
                        <field name="tenant_id" required="1"/>
                        <field name="domain" required="1"/>
                        <field name="config_type" required="1"/>
                    </group>
                    <group>
                        <button name="action_view_config" string="Visualizar Configuração" type="object" class="oe_highlight"/>
                        <button name="action_check_config" string="Verificar Configuração" type="object" class="btn-primary"/>
                    </group>
                    <notebook attrs="{'invisible': [('yaml_content', '=', False)]}">
                        <page string="Conteúdo YAML">
                            <field name="yaml_content" widget="ace" options="{'mode': 'yaml'}" readonly="1"/>
                        </page>
                        <page string="Dados JSON">
                            <field name="json_data" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_config_viewer" model="ir.actions.act_window">
        <field name="name">Visualizador de Configurações</field>
        <field name="res_model">config.viewer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu para o Visualizador de Configurações -->
    <menuitem id="menu_config_viewer"
              name="Visualizador de Configurações"
              parent="menu_ai_credentials_root"
              action="action_config_viewer"
              sequence="50"
              groups="group_ai_credentials_manager"/>

    <!-- Visualizador de Mapeamento Chatwoot -->
    <record id="view_mapping_viewer_form" model="ir.ui.view">
        <field name="name">mapping.viewer.form</field>
        <field name="model">mapping.viewer</field>
        <field name="arch" type="xml">
            <form string="Visualizador de Mapeamento Chatwoot">
                <sheet>
                    <group>
                        <button name="action_view_mapping" string="Visualizar Mapeamento" type="object" class="oe_highlight"/>
                        <button name="action_check_mapping" string="Verificar Mapeamento" type="object" class="btn-primary"/>
                    </group>
                    <notebook attrs="{'invisible': [('yaml_content', '=', False)]}">
                        <page string="Conteúdo YAML">
                            <field name="yaml_content" widget="ace" options="{'mode': 'yaml'}" readonly="1"/>
                        </page>
                        <page string="Dados JSON">
                            <field name="json_data" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mapping_viewer" model="ir.actions.act_window">
        <field name="name">Visualizador de Mapeamento</field>
        <field name="res_model">mapping.viewer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu para o Visualizador de Mapeamento -->
    <menuitem id="menu_mapping_viewer"
              name="Visualizador de Mapeamento"
              parent="menu_ai_credentials_root"
              action="action_mapping_viewer"
              sequence="51"
              groups="group_ai_credentials_manager"/>
</odoo>
