<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban para Gerenciamento de Produtos -->
    <record id="product_ai_mass_management_view_kanban" model="ir.ui.view">
        <field name="name">product.ai.mass.management.kanban</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="ai_price"/>
                <field name="image_128"/>
                <field name="semantic_sync_status"/>
                <field name="channels_sync_status"/>
                <field name="ai_description_quality"/>
                <field name="ai_price_status"/>
                <field name="ai_popularity"/>
                <field name="channel_count"/>
                <field name="active"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('product.template', 'image_128', record.id.raw_value)}); background-position: center; background-size: cover;">
                                <img class="o_kanban_image_inner_pic" t-if="!record.image_128.raw_value" t-att-src="'/web/static/img/product_product_default.png'"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="default_code"/>
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <!-- Preços -->
                                    <div class="mt-2">
                                        <span class="font-weight-bold">Preço Padrão:</span>
                                        <span class="float-right">
                                            <field name="list_price" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="mt-1">
                                        <span class="font-weight-bold">Preço IA:</span>
                                        <span class="float-right">
                                            <field name="ai_price" widget="monetary"/>
                                        </span>
                                    </div>
                                    
                                    <!-- Status -->
                                    <div class="mt-3">
                                        <div>
                                            <field name="semantic_sync_status" widget="label_selection" 
                                                   options="{'classes': {'not_synced': 'danger', 'syncing': 'info', 'synced': 'success', 'needs_update': 'warning'}}"/>
                                            <span class="ml-2">Status IA</span>
                                        </div>
                                        <div class="mt-1">
                                            <field name="channels_sync_status" widget="label_selection" 
                                                   options="{'classes': {'not_synced': 'danger', 'partial': 'warning', 'synced': 'success'}}"/>
                                            <span class="ml-2">Status Canais</span>
                                        </div>
                                        <div class="mt-1">
                                            <field name="ai_description_quality" widget="label_selection" 
                                                   options="{'classes': {'none': 'muted', 'generated': 'warning', 'verified': 'success'}}"/>
                                            <span class="ml-2">Descrição</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-primary">
                                            <i class="fa fa-sitemap"/> <field name="channel_count"/> Canais
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Modificar a ação para incluir a vista Kanban -->
    <record id="action_product_ai_mass_management" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
    <!-- Ação para Estatísticas de Produtos -->
    <record id="action_product_ai_statistics" model="ir.actions.act_window">
        <field name="name">Estatísticas de Produtos IA</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">graph,pivot,kanban,tree,form</field>
        <field name="search_view_id" ref="product_ai_mass_management_search_view"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Visualize estatísticas de seus produtos no Sistema de IA
            </p>
            <p>
                Esta vista mostra estatísticas importantes sobre seus produtos,
                como total de produtos sincronizados, produtos em canais, etc.
            </p>
        </field>
    </record>
    
    <!-- Menu para Estatísticas -->
    <menuitem id="menu_product_ai_statistics"
              name="Estatísticas de Produtos"
              parent="menu_ai_system_root"
              action="action_product_ai_statistics"
              sequence="5"/>
</odoo>
