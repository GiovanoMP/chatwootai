<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ações para os modelos relacionados (devem ser declaradas antes de serem referenciadas) -->
    <record id="action_view_rule_items" model="ir.actions.act_window">
        <field name="name">Regras de Negócio</field>
        <field name="res_model">business.rule.item</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_business_rule_id': active_id}</field>
        <field name="domain">[('business_rule_id', '=', active_id)]</field>
    </record>

    <record id="action_view_temporary_rules" model="ir.actions.act_window">
        <field name="name">Regras Temporárias</field>
        <field name="res_model">business.temporary.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_business_rule_id': active_id}</field>
        <field name="domain">[('business_rule_id', '=', active_id)]</field>
    </record>

    <record id="action_view_scheduling_rules" model="ir.actions.act_window">
        <field name="name">Regras de Agendamento</field>
        <field name="res_model">business.scheduling.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_business_rule_id': active_id}</field>
        <field name="domain">[('business_rule_id', '=', active_id)]</field>
    </record>

    <record id="action_view_support_documents" model="ir.actions.act_window">
        <field name="name">Documentos de Suporte</field>
        <field name="res_model">business.support.document</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_business_rule_ids': active_id}</field>
        <field name="domain">[('business_rule_ids', 'in', active_id)]</field>
    </record>

    <!-- Vista de Formulário para Regras de Negócio -->
    <record id="view_business_rules_form" model="ir.ui.view">
        <field name="name">business.rules.form</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sync_with_ai"
                            string="Sincronizar com Sistema de IA"
                            type="object"
                            class="btn btn-success"
                            icon="fa-sync"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="not_synced,syncing,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rule_items" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="active_permanent_rules_count" string="Regras Permanentes" widget="statinfo"/>
                        </button>
                        <button name="action_view_temporary_rules" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="active_temporary_rules_count" string="Regras Temporárias" widget="statinfo"/>
                        </button>
                        <button name="action_view_scheduling_rules" type="object" class="oe_stat_button" icon="fa-clock-o">
                            <field name="active_scheduling_rules_count" string="Regras de Agendamento" widget="statinfo"/>
                        </button>
                        <button name="action_view_support_documents" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="support_documents_count" string="Documentos de Suporte" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome da Regra"/>
                        </h1>
                        <div class="o_row">
                            <field name="active" widget="boolean_toggle"/>
                            <label for="active" string="Ativo"/>
                            <span class="fa fa-minus text-muted mx-1" attrs="{'invisible': [('sync_status', '!=', 'not_synced')]}"/>
                        </div>
                    </div>
                    <group>
                        <field name="last_sync_date" readonly="1"/>
                        <field name="error_message" readonly="1" attrs="{'invisible': [('sync_status', '!=', 'error')]}"/>
                    </group>
                    <notebook>
                        <page string="Regras de Negócio" name="business_rules">
                            <p class="text-muted">
                                Configure as regras de negócio permanentes da sua empresa. Estas regras serão utilizadas pelo sistema de IA para responder às consultas dos clientes.
                            </p>
                            <field name="rule_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="visible_in_ai" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="name"/>
                                            <field name="active"/>
                                            <field name="visible_in_ai"/>
                                        </group>
                                        <notebook>
                                            <page string="Descrição" name="description">
                                                <field name="description" placeholder="Descreva a regra em detalhes..."/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Regras Temporárias" name="temporary_rules">
                            <p class="text-muted">
                                Configure regras temporárias ou promoções com período de validade. Estas regras serão automaticamente ativadas e desativadas conforme as datas definidas.
                            </p>
                            <field name="temporary_rule_ids">
                                <tree decoration-success="state == 'active'" decoration-info="state == 'draft'" decoration-muted="state == 'expired' or state == 'cancelled'">
                                    <field name="name"/>
                                    <field name="rule_type"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="state"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="visible_in_ai" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="rule_type"/>
                                                <field name="state"/>
                                            </group>
                                            <group>
                                                <field name="date_start"/>
                                                <field name="date_end"/>
                                                <field name="active"/>
                                                <field name="visible_in_ai"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Descrição" name="description">
                                                <field name="description" placeholder="Descreva a regra temporária em detalhes..."/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Regras de Agendamento" name="scheduling_rules">
                            <p class="text-muted">
                                Configure regras para agendamentos de serviços, consultas ou reservas. Estas regras serão utilizadas pelo sistema de IA para orientar os clientes sobre disponibilidade e políticas de agendamento.
                            </p>
                            <field name="scheduling_rule_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="service_type"/>
                                    <field name="duration" widget="float_time"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="visible_in_ai" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documentos de Suporte" name="support_documents">
                            <p class="text-muted">
                                Adicione documentos de suporte para enriquecer a base de conhecimento do sistema de IA. Estes documentos serão utilizados para responder dúvidas específicas dos clientes.
                            </p>
                            <button name="%(business_rules18.action_document_upload_wizard)d" string="Adicionar Documento" type="action" class="btn-primary"/>
                            <field name="support_document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="visible_in_ai" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Configurações Avançadas" name="advanced_settings">
                            <group>
                                <group string="Serviços Habilitados">
                                    <field name="use_business_rules"/>
                                    <field name="use_scheduling_rules"/>
                                    <field name="use_delivery_rules"/>
                                    <field name="use_support_documents"/>
                                </group>
                                <group string="Visibilidade">
                                    <field name="visible_in_ai"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Regras de Negócio -->
    <record id="view_business_rules_tree" model="ir.ui.view">
        <field name="name">business.rules.tree</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active_permanent_rules_count" string="Regras Permanentes"/>
                <field name="active_temporary_rules_count" string="Regras Temporárias"/>
                <field name="last_sync_date"/>
                <field name="visible_in_ai" widget="boolean_toggle" string="Disponível no Sistema de IA"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Regras de Negócio -->
    <record id="view_business_rules_search" model="ir.ui.view">
        <field name="name">business.rules.search</field>
        <field name="model">business.rules</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Ativas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Disponíveis no Sistema de IA" name="visible_in_ai" domain="[('visible_in_ai', '=', True)]"/>
                <separator/>
                <filter string="Não Sincronizadas" name="not_synced" domain="[('sync_status', '=', 'not_synced')]"/>
                <filter string="Sincronizadas" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Com Erro" name="error" domain="[('sync_status', '=', 'error')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Status de Sincronização" name="group_by_sync_status" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Regras de Negócio -->
    <record id="action_business_rules" model="ir.actions.act_window">
        <field name="name">Regras de Negócio</field>
        <field name="res_model">business.rules</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie sua primeira regra de negócio
            </p>
            <p>
                As regras de negócio são utilizadas pelo sistema de IA para responder às consultas dos clientes.
                Você pode criar regras permanentes, temporárias, de agendamento e adicionar documentos de suporte.
            </p>
        </field>
    </record>
</odoo>
