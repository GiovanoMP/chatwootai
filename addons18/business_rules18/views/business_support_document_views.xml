<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Documentos de Suporte -->
    <record id="view_business_support_document_form" model="ir.ui.view">
        <field name="name">business.support.document.form</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome do Documento"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_type"/>
                            <field name="business_rule_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="visible_in_ai"/>
                            <field name="last_sync_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conteúdo" name="content">
                            <field name="content" placeholder="Conteúdo do documento..."/>
                        </page>
                        <page string="Anexos" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Documentos de Suporte -->
    <record id="view_business_support_document_tree" model="ir.ui.view">
        <field name="name">business.support.document.tree</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="document_type"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="visible_in_ai" widget="boolean_toggle"/>
                <field name="last_sync_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Documentos de Suporte -->
    <record id="view_business_support_document_search" model="ir.ui.view">
        <field name="name">business.support.document.search</field>
        <field name="model">business.support.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="document_type"/>
                <field name="content"/>
                <separator/>
                <filter string="Ativos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Disponíveis no Sistema de IA" name="visible_in_ai" domain="[('visible_in_ai', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Documento" name="document_type" domain="[]" context="{'group_by': 'document_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Documentos de Suporte -->
    <record id="action_business_support_document" model="ir.actions.act_window">
        <field name="name">Documentos de Suporte</field>
        <field name="res_model">business.support.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro documento de suporte
            </p>
            <p>
                Os documentos de suporte são utilizados pelo sistema de IA para responder às dúvidas específicas dos clientes.
                Você pode adicionar documentos como FAQs, manuais, políticas, etc.
            </p>
        </field>
    </record>
</odoo>
