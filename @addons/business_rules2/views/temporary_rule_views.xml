<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulário para Regras Temporárias -->
    <record id="view_temporary_rule2_form" model="ir.ui.view">
        <field name="name">business.temporary.rule2.form</field>
        <field name="model">business.temporary.rule2</field>
        <field name="arch" type="xml">
            <form string="Regra Temporária">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nome da Regra"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rule_type"/>
                            <field name="business_rule_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active"/>
                            <field name="visible_in_ai"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descrição" name="description">
                            <field name="description" placeholder="Descreva a regra temporária em detalhes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Árvore para Regras Temporárias -->
    <record id="view_temporary_rule2_tree" model="ir.ui.view">
        <field name="name">business.temporary.rule2.tree</field>
        <field name="model">business.temporary.rule2</field>
        <field name="arch" type="xml">
            <tree string="Regras Temporárias" decoration-success="state == 'active'" decoration-info="state == 'draft'" decoration-muted="state == 'expired' or state == 'cancelled'">
                <field name="name"/>
                <field name="rule_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
                <field name="business_rule_id"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="visible_in_ai" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Pesquisa para Regras Temporárias -->
    <record id="view_temporary_rule2_search" model="ir.ui.view">
        <field name="name">business.temporary.rule2.search</field>
        <field name="model">business.temporary.rule2</field>
        <field name="arch" type="xml">
            <search string="Regras Temporárias">
                <field name="name"/>
                <field name="rule_type"/>
                <field name="business_rule_id"/>
                <separator/>
                <filter string="Ativas" name="active_state" domain="[('state', '=', 'active')]"/>
                <filter string="Rascunho" name="draft_state" domain="[('state', '=', 'draft')]"/>
                <filter string="Expiradas" name="expired_state" domain="[('state', '=', 'expired')]"/>
                <filter string="Canceladas" name="cancelled_state" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Disponíveis no Sistema de IA" name="visible_in_ai" domain="[('visible_in_ai', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Tipo de Regra" name="rule_type" domain="[]" context="{'group_by': 'rule_type'}"/>
                    <filter string="Regra de Negócio" name="business_rule_id" domain="[]" context="{'group_by': 'business_rule_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Ação para Regras Temporárias -->
    <record id="action_view_temporary_rules" model="ir.actions.act_window">
        <field name="name">Regras Temporárias</field>
        <field name="res_model">business.temporary.rule2</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_business_rule_id': active_id}</field>
        <field name="domain">[('business_rule_id', '=', active_id)]</field>
    </record>
</odoo>
