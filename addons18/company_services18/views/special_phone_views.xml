<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_company_services_special_phone_form" model="ir.ui.view">
        <field name="name">company.services.special.phone.form</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Nome da pessoa ou departamento"/>
                            <field name="phone_number" placeholder="+5511999999999"/>
                        </group>
                        <group>
                            <field name="allow_erp_support"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observações" name="notes">
                            <field name="notes" placeholder="Observações adicionais sobre este número especial..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_company_services_special_phone_tree" model="ir.ui.view">
        <field name="name">company.services.special.phone.tree</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone_number"/>
                <field name="allow_erp_support"/>
                <field name="notes" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_company_services_special_phone_search" model="ir.ui.view">
        <field name="name">company.services.special.phone.search</field>
        <field name="model">company.services.special.phone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone_number"/>
                <filter string="Suporte ao ERP" name="erp_support" domain="[('allow_erp_support', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Permissões de Suporte ao ERP" name="group_erp_support" context="{'group_by': 'allow_erp_support'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_company_services_special_phone" model="ir.actions.act_window">
        <field name="name">Números de Telefone Especiais</field>
        <field name="res_model">company.services.special.phone</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crie seu primeiro número de telefone especial
            </p>
            <p>
                Configure números de telefone com permissões especiais para acesso a funcionalidades avançadas do sistema de IA.
            </p>
        </field>
    </record>
</odoo>
