<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_product_enrichment_form" model="ir.ui.view">
            <field name="name">product.enrichment.form</field>
            <field name="model">product.enrichment</field>
            <field name="arch" type="xml">
                <form string="Enriquecimento de Produto">
                    <header>
                        <button name="action_process" string="Processar" type="object" 
                                class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft', 'error'])]}"/>
                        <button name="action_approve" string="Aprovar e Aplicar" type="object" 
                                class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'done'), ('approved', '=', True)]}"/>
                        <button name="action_cancel" string="Cancelar" type="object" 
                                attrs="{'invisible': [('state', 'in', ['canceled', 'processing'])]}"/>
                        <button name="action_reset_to_draft" string="Resetar para Rascunho" type="object" 
                                attrs="{'invisible': [('state', 'not in', ['error', 'canceled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,processing,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_product" type="object" class="oe_stat_button" icon="fa-cube">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Ver Produto</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <!-- Alertas e Banners -->
                        <div class="alert alert-info mb-4" role="alert" style="border-left: 4px solid #2196F3; background-color: #f8f9fa;" 
                             attrs="{'invisible': [('state', '!=', 'draft')]}">
                            <div class="d-flex">
                                <i class="fa fa-magic fa-2x me-3 text-primary"></i>
                                <div>
                                    <h4 class="alert-heading">Pronto para Enriquecer</h4>
                                    <p class="mb-0">Configure as opções abaixo e clique em "Processar" para iniciar o enriquecimento com IA.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-success mb-4" role="alert" style="border-left: 4px solid #4CAF50; background-color: #f8f9fa;" 
                             attrs="{'invisible': ['|', ('state', '!=', 'done'), ('approved', '=', True)]}">
                            <div class="d-flex">
                                <i class="fa fa-check-circle fa-2x me-3 text-success"></i>
                                <div>
                                    <h4 class="alert-heading">Enriquecimento Concluído</h4>
                                    <p class="mb-0">O enriquecimento foi concluído com sucesso. Revise o resultado e clique em "Aprovar e Aplicar" para aplicar as alterações ao produto.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-warning mb-4" role="alert" style="border-left: 4px solid #FFC107; background-color: #f8f9fa;" 
                             attrs="{'invisible': [('state', '!=', 'processing')]}">
                            <div class="d-flex">
                                <i class="fa fa-spinner fa-spin fa-2x me-3 text-warning"></i>
                                <div>
                                    <h4 class="alert-heading">Processando</h4>
                                    <p class="mb-0">O enriquecimento está em andamento. Isso pode levar alguns instantes.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-danger mb-4" role="alert" style="border-left: 4px solid #F44336; background-color: #f8f9fa;" 
                             attrs="{'invisible': [('state', '!=', 'error')]}">
                            <div class="d-flex">
                                <i class="fa fa-exclamation-triangle fa-2x me-3 text-danger"></i>
                                <div>
                                    <h4 class="alert-heading">Erro no Processamento</h4>
                                    <p class="mb-0">Ocorreu um erro durante o processamento. Verifique os detalhes abaixo e tente novamente.</p>
                                    <p class="mt-2 mb-0" attrs="{'invisible': [('error_message', '=', False)]}">
                                        <field name="error_message" readonly="1"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Configurações -->
                        <notebook>
                            <page string="Configurações" name="config">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #2196F3; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Produto e Perfil</h3>
                                            <group>
                                                <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="enrichment_profile_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="marketplace_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <field name="scheduled_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </group>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card" style="border-left: 4px solid #4CAF50; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Status e Informações</h3>
                                            <group>
                                                <field name="created_by" readonly="1"/>
                                                <field name="create_date" readonly="1"/>
                                                <field name="processed_date" readonly="1" attrs="{'invisible': [('processed_date', '=', False)]}"/>
                                                <field name="processing_time" readonly="1" widget="float_time" attrs="{'invisible': [('processing_time', '=', 0)]}"/>
                                                <field name="approved" readonly="1" widget="boolean_toggle" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                                                <field name="approved_by" readonly="1" attrs="{'invisible': [('approved_by', '=', False)]}"/>
                                                <field name="approval_date" readonly="1" attrs="{'invisible': [('approval_date', '=', False)]}"/>
                                            </group>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            
                            <!-- Conteúdo Original -->
                            <page string="Conteúdo Original" name="original_content">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Título Original</h3>
                                    <field name="original_title" readonly="1" placeholder="Título original do produto"/>
                                    
                                    <h3 style="margin-top: 16px; color: #212529; font-size: 16px; font-weight: bold;">Descrição Original</h3>
                                    <field name="original_description" readonly="1" placeholder="Descrição original do produto"/>
                                </div>
                            </page>
                            
                            <!-- Conteúdo Enriquecido -->
                            <page string="Conteúdo Enriquecido" name="enriched_content" attrs="{'invisible': [('state', 'in', ['draft', 'pending'])]}">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Título Enriquecido</h3>
                                    <field name="enriched_title" attrs="{'readonly': [('approved', '=', True)]}" placeholder="Título enriquecido do produto"/>
                                    
                                    <h3 style="margin-top: 16px; color: #212529; font-size: 16px; font-weight: bold;">Descrição Enriquecida</h3>
                                    <field name="enriched_description" attrs="{'readonly': [('approved', '=', True)]}" placeholder="Descrição enriquecida do produto"/>
                                    
                                    <h3 style="margin-top: 16px; color: #212529; font-size: 16px; font-weight: bold;">Palavras-chave</h3>
                                    <field name="enriched_keywords" attrs="{'readonly': [('approved', '=', True)]}" placeholder="Palavras-chave separadas por vírgula"/>
                                    
                                    <h3 style="margin-top: 16px; color: #212529; font-size: 16px; font-weight: bold;">Pontos Principais</h3>
                                    <field name="enriched_bullet_points" attrs="{'readonly': [('approved', '=', True)]}" placeholder="Pontos principais do produto (um por linha)"/>
                                </div>
                            </page>
                            
                            <!-- Análise Competitiva -->
                            <page string="Análise Competitiva" name="competitive_analysis" attrs="{'invisible': ['|', ('state', 'not in', ['done']), ('competitive_analysis', '=', False)]}">
                                <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                    <field name="competitive_analysis" readonly="1"/>
                                </div>
                            </page>
                            
                            <!-- Imagens Sugeridas -->
                            <page string="Imagens Sugeridas" name="suggested_images" attrs="{'invisible': [('suggested_image_ids', '=', [])]}">
                                <field name="suggested_image_ids">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="image_preview"/>
                                        <field name="source"/>
                                        <field name="relevance"/>
                                        <field name="approved"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                                    <div class="o_kanban_image">
                                                        <img t-if="record.image_preview.raw_value" t-att-src="'data:image/png;base64,'+record.image_preview.raw_value" alt="Imagem"/>
                                                        <img t-else="" src="/web/static/src/img/placeholder.png" alt="Placeholder"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <strong><field name="name"/></strong>
                                                        <div t-if="record.description.raw_value"><field name="description"/></div>
                                                        <div class="mt-2">
                                                            <span t-attf-class="badge badge-pill #{record.relevance.raw_value == 'high' ? 'badge-success' : record.relevance.raw_value == 'medium' ? 'badge-warning' : 'badge-info'}">
                                                                <t t-if="record.relevance.raw_value == 'high'">Alta Relevância</t>
                                                                <t t-elif="record.relevance.raw_value == 'medium'">Média Relevância</t>
                                                                <t t-else="">Baixa Relevância</t>
                                                            </span>
                                                            <span t-attf-class="badge badge-pill badge-primary ml-2">
                                                                <t t-if="record.source.raw_value == 'ai'">IA</t>
                                                                <t t-elif="record.source.raw_value == 'search'">Busca</t>
                                                                <t t-elif="record.source.raw_value == 'stock'">Banco</t>
                                                                <t t-else="">Gerada</t>
                                                            </span>
                                                        </div>
                                                        <div class="mt-2">
                                                            <button t-if="!record.approved.raw_value" name="action_approve" type="object" class="btn btn-sm btn-success">
                                                                Aprovar
                                                            </button>
                                                            <span t-if="record.approved.raw_value" class="badge badge-success">
                                                                <i class="fa fa-check"/> Aprovada
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            
                            <!-- Detalhes Técnicos -->
                            <page string="Detalhes Técnicos" name="technical_details" groups="product_ai_studio.group_product_ai_studio_manager">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Prompt Utilizado</h3>
                                            <field name="prompt_used" readonly="1"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card" style="border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); margin-bottom: 16px; padding: 16px;">
                                            <h3 style="margin-top: 0; color: #212529; font-size: 16px; font-weight: bold;">Vetorização</h3>
                                            <group>
                                                <field name="vectorized" readonly="1"/>
                                                <field name="vectorization_date" readonly="1" attrs="{'invisible': [('vectorization_date', '=', False)]}"/>
                                                <field name="vector_id" readonly="1" attrs="{'invisible': [('vector_id', '=', False)]}"/>
                                            </group>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Tree View -->
        <record id="view_product_enrichment_tree" model="ir.ui.view">
            <field name="name">product.enrichment.tree</field>
            <field name="model">product.enrichment</field>
            <field name="arch" type="xml">
                <tree string="Enriquecimentos de Produto" decoration-info="state == 'draft'" decoration-warning="state == 'processing'" decoration-success="state == 'done'" decoration-danger="state == 'error'" decoration-muted="state == 'canceled'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="enrichment_profile_id"/>
                    <field name="marketplace_id"/>
                    <field name="state"/>
                    <field name="created_by"/>
                    <field name="create_date"/>
                    <field name="processed_date"/>
                    <field name="approved"/>
                    <field name="vectorized"/>
                </tree>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_product_enrichment_search" model="ir.ui.view">
            <field name="name">product.enrichment.search</field>
            <field name="model">product.enrichment</field>
            <field name="arch" type="xml">
                <search string="Enriquecimentos de Produto">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="enrichment_profile_id"/>
                    <field name="marketplace_id"/>
                    <field name="created_by"/>
                    
                    <filter string="Meus Enriquecimentos" name="my_enrichments" domain="[('created_by', '=', uid)]"/>
                    <filter string="Rascunhos" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Em Processamento" name="processing" domain="[('state', '=', 'processing')]"/>
                    <filter string="Concluídos" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Com Erro" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Aprovados" name="approved" domain="[('approved', '=', True)]"/>
                    <filter string="Não Aprovados" name="not_approved" domain="[('state', '=', 'done'), ('approved', '=', False)]"/>
                    <filter string="Vetorizados" name="vectorized" domain="[('vectorized', '=', True)]"/>
                    
                    <group expand="0" string="Agrupar Por">
                        <filter string="Produto" name="group_by_product" context="{'group_by': 'product_id'}"/>
                        <filter string="Perfil" name="group_by_profile" context="{'group_by': 'enrichment_profile_id'}"/>
                        <filter string="Marketplace" name="group_by_marketplace" context="{'group_by': 'marketplace_id'}"/>
                        <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Criado por" name="group_by_created_by" context="{'group_by': 'created_by'}"/>
                        <filter string="Data de Criação" name="group_by_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_product_enrichment" model="ir.actions.act_window">
            <field name="name">Enriquecimentos</field>
            <field name="res_model">product.enrichment</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_product_enrichment_search"/>
            <field name="context">{'search_default_my_enrichments': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crie seu primeiro enriquecimento de produto!
                </p>
                <p>
                    O Estúdio de Produtos com IA permite enriquecer descrições de produtos,
                    otimizar imagens e personalizar conteúdo para diferentes marketplaces.
                </p>
            </field>
        </record>
        
        <!-- Menu definido em menu_views.xml -->
    </data>
</odoo>
